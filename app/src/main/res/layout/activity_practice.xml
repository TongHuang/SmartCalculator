<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PracticeActivity"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10">


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Expression"
            android:id="@+id/txtViewExpression"
            android:layout_gravity="top|center_horizontal"
            android:textSize="30dp"
            android:textAlignment="center"
            android:layout_weight="50" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="20"
            android:layout_gravity="bottom"
            android:minHeight="50dp"
            android:minWidth="70dp"
            android:nestedScrollingEnabled="false">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="20"
                android:id="@+id/textView"
                android:background="#ff12ff5c"
                android:textSize="20dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="1"
                android:id="@+id/textView2"
                android:background="#ffff1726"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21"
                android:id="@+id/textView3"
                android:textSize="20dp" />

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Next >>"
            android:id="@+id/btnNext"
            android:onClick="btnNextClick" />
    </LinearLayout>

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/groupChoices"
        android:layout_weight="80"
        android:weightSum="100">

        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Choice #1"
            android:id="@+id/radioButtonOne"
            android:layout_weight="25"
            android:textAlignment="center"
            android:textSize="25dp"
            android:onClick="radioButtonOneClick"
            android:layout_marginLeft="10dp"
            android:paddingLeft="40dp" />

        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Choice #2"
            android:id="@+id/radioButtonTwo"
            android:layout_weight="25"
            android:textSize="25dp"
            android:onClick="radioButtonTwoClick"
            android:checked="false"
            android:layout_marginLeft="10dp"
            android:paddingLeft="40dp" />

        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Choice #3"
            android:id="@+id/radioButtonThree"
            android:layout_weight="25"
            android:textSize="25dp"
            android:onClick="radioButtonThreeClick"
            android:layout_marginLeft="10dp"
            android:paddingLeft="40dp" />

        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Choice #4"
            android:id="@+id/radioButtonFour"
            android:layout_weight="25"
            android:textSize="25dp"
            android:onClick="radioButtonFourClick"
            android:layout_marginLeft="10dp"
            android:paddingLeft="40dp" />
    </RadioGroup>

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0-10"
            android:id="@+id/radioButton" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0-20"
            android:id="@+id/radioButton2" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0-50"
            android:id="@+id/radioButton3" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0-100"
            android:id="@+id/radioButton4" />
    </RadioGroup>


</LinearLayout>